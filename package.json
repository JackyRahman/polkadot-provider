{
  "version": "0.0.1",
  "description": "Javascript Library to connect and interact with the DeBio Network blockchain.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config ./test/unit/jest-unit.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debionetwork/polkadot-provider.git"
  },
  "keywords": [],
  "author": "Agustinus Theodorus <agustinustheoo@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/debionetwork/polkadot-provider/issues"
  },
  "homepage": "https://github.com/debionetwork/polkadot-provider#readme",
  "dependencies": {
    "@polkadot/api": "^7.8.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "27.0.6",
    "jest-when": "^3.4.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@polkadot/api(.*)$": "<rootDir>/substrate/substrate.service.ts"
    },
    "setupFiles": [
      "dotenv/config"
    ]
  },
  "name": "@debionetwork/polkadot-provider",
  "directories": {
    "test": "tests"
  }
}
